<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp"
    android:background="@null">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/btn_continue"
            android:background="@drawable/bg_main_background"
            android:padding="@dimen/_12sdp">


            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_back_arrow_vector"
                android:tint="#fff" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_toEndOf="@+id/img_back"
                android:fontFamily="@font/berkshire_swash"
                android:text="Enter your name"
                android:textColor="#fff"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/lin_new_cust"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_name"
                android:layout_marginTop="@dimen/_20sdp"

                android:orientation="vertical">

                <EditText
                    android:id="@+id/edt_name"
                    style="@style/font_roboto_medium"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/bg_grey_lighter_sld_rounded"
                    android:fontFamily="@font/berkshire_swash"
                    android:hint="Name..."
                    android:lineSpacingExtra="@dimen/_1sdp"
                    android:lineSpacingMultiplier="2"
                    android:lines="1"

                    android:maxLines="1"
                    android:paddingStart="@dimen/_3sdp"
                    android:textColor="@color/black2"
                    android:textColorHint="@color/black2"
                    android:textDirection="@null"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_error"
                    style="@style/font_roboto_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:text="plz enter name first !!!..."
                    android:textColor="#b81c1c"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>

        </RelativeLayout>


        <Button
            android:id="@+id/btn_continue"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:background="@drawable/ripple_green_btn_ronded"
            android:fontFamily="@font/berkshire_swash"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="@color/white_two"
            android:textSize="@dimen/_10sdp" />

    </RelativeLayout>


</RelativeLayout>